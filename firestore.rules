rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default to denying all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can manage their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Properties are the root of ownership
    match /properties/{propertyId} {
      // A user can create a property for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Only the owner can read, update, or delete their property
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Tenants belong to a property
    match /tenants/{tenantId} {
      // To create a tenant, you must own the property it belongs to
      allow create: if request.auth != null && get(/databases/$(database)/documents/properties/$(request.resource.data.propertyId)).data.userId == request.auth.uid;
      // To manage a tenant, you must be the user who records it (landlord)
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Payments belong to a property
    match /payments/{paymentId} {
       // To create a payment, you must own the property it belongs to
      allow create: if request.auth != null && get(/databases/$(database)/documents/properties/$(request.resource.data.propertyId)).data.userId == request.auth.uid;
      // To manage a payment, you must own the property it belongs to
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/properties/$(resource.data.propertyId)).data.userId == request.auth.uid;
    }
  }
}
